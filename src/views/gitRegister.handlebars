<div id="register" class="container bg-info w-50 rounded mt-3 pb-2">
    <h3 class="text-center text-white pb-1">My eCommerce Register form</h3>
    <div class="container border border-secondary rounded ">
        <div id="register-row" class="row justify-content-center align-items-center">
            <div id="register-column" class="col-md-9">
                <div id="register-box" class="col-md-12">
                    <form id="registerForm">
                        <h3 class="text-center text-light">GitHub Register</h3>
                    
                        <div class="row my-1">
                            <label class="form-label col-3">Enter Email</label>
                            <input type="text" class="col-4 form-control w-75" name="email" id="email"
                                placeholder="abc@mail.com" />
                        </div>
                        <div class="form-group d-flex flex-row justify-content-between mt-1 mb-3">
                            <a href="/api/sessions/github" class="me-2 btn btn-sm btn-light rounded mt-2 opacity-75"
                                role="button">Register with GitHub</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

