<div id="login" class="container bg-info rounded mt-3 pb-2" style="width:500px">
  <h3 class="text-center text-white pb-2">My eCommerce App</h3>
  <div class="container border border-secondary rounded ">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-11">
        <div id="login-box" class="col-md-12">
          <form id="loginForm">
            <h3 class="text-center text-light">Login</h3>
            <div class="row my-2">
              <label class="col-3 form-label">Email</label>
              <input type="text" class="col-4 form-control w-75" name="email" id="email" placeholder="abc@mail.com"
                autocomplete="email" />
            </div>
            <div class="row mb-2">
              <label class="col-3 form-label">Password</label>
              <input type="password" class="col-4 form-control w-75" name="password" id="password"
                placeholder="password" autocomplete="current-password" />
              <label>Show Password:
                <input type="checkbox" onclick="showPwd()">
              </label>
            </div>
            <div class="form-group d-flex flex-row justify-content-between mt-1 mb-3">
              <a href="/users/register" class="btn-sm me-2 btn btn-light rounded mt-2 opacity-75" role="button">Register
                here</a>
              <a href="/users/gitRegister" class="me-2 btn btn-sm btn-light rounded mt-2 opacity-75"
                role="button">Register with GitHub</a>
              <a href="/users/forgot" class="btn-sm me-2 btn btn-light rounded mt-2 opacity-75" role="button">Forgot
                password</a>
              <input class="mt-2 btn btn-primary btn-sm rounded px-2 fw-bold" type="submit"></input>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  const showPwd = () => {
    let input = document.querySelector("#password")
    if (input.type === "password") {
      input.type = "text"
    } else {
      input.type = "password"
    }
  }
</script>
<script src="/js/loginjwt.js"></script>