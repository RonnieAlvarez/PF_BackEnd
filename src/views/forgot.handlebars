<div id="reset" class="container bg-info rounded mt-3 pb-2" style="width:500px">
    <h3 class="text-center text-white pb-2">Reset password</h3>
    <div class="container border border-secondary rounded ">

        <form id="resetForm" method="post" action="/users/forgot-password">
            <div class="row my-2">
                <label class="col-3 form-label">Email</label>
                <input type="text" class="col-4 form-control w-75" name="email" id="email" placeholder="abc@mail.com"
                    autocomplete="email" />
            </div>

            <div class="form-group d-flex flex-row justify-content-between mt-1 mb-3">
                <input class="mt-2 btn btn-primary btn-sm rounded px-2 fw-bold" type="submit"></input>
            </div>
        </form>

    </div>
</div>