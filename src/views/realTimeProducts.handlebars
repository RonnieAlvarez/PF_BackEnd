<div class="container">
  {{#if canaddproducts}}
  <div>
    <form action="/products/realTimeProducts" method="post" id="form-products"
      class="p-2 m-1 h-100 mt-10 mx-auto  items-center bg-info d-flex justify-content-center align-items-center rounded">
      <div>
        <input class="gap-1 border-botton  border-2 " placeholder="id" type="text" name="id" id="id" />
        <input class="gap-1 border-botton  border-2 " placeholder="Title" type="text" name="Title" id="title" />
        <input class="gap-1 border-botton  border-2 " placeholder="Price" type="number" name="Price" />
        <input class="gap-1 border-botton  border-2 " placeholder="Description" type="text" name="Description" />
        <input class="gap-1 border-botton  border-2 " placeholder="Category" type="text" name="Category" />
        <input class="gap-1 border-botton  border-2 " placeholder="Stock" type="text" name="Stock" />
        <input class="gap-1 border-botton  border-2 " placeholder="Code" type="text" name="Code" /><br>
      </div>
      <div>
        <input class="p-1 btn btn-secondary btn-sm my-1" type="submit" value="Add Product" />
        <input class="p-1 btn btn-danger btn-sm" type="reset" value="Reset form">
      </div>
    </form>
  </div>

  <div class="text-center align-middle rounded">
    <form id="delete-form" method="GET" action="/products/realTimeProducts/delete"
      class="p-2 h-100 mt-10 mx-auto items-center bg-info rounded">
      <input class="me-3 border-botton border-black mt-1 border-2 rounded" type="text" name="pid"
        placeholder="Id to delete" />
      <input class="btn btn-secondary btn-sm my-1" type="submit" value="Delete Product" />
    </form>
  </div>
  {{/if}}
  {{#if productsa}}
  <div class=" m-auto bg-dark rounded">

    <div class="container d-flex flex-column-reverse mt-2  bg-dark p-2 rounded">
      <div class="rounded">
        <table class='w-100 bg-info py-10 mt-2  mx-auto items-center p-2 rounded'>
          <thead class='bg-light text-start rounded'>
            <tr>
              <th>Product _ID</th>
              <th>Title</th>
              <th>Price</th>
              <th>Description </th>
              <th>Category</th>
              <th>Status</th>
              <th>Stock</th>
              <th>Code</th>
            </tr>
          </thead>
          <tbody class='bg-info rounded'>

            {{#each productsa}}
            <tr>
              <td><span class=" mx-2">{{lookup this "id"}}</span></td>
              <td><span class=" mx-2">{{lookup this "Title"}}</span></td>
              <td><span class=" mx-2">{{lookup this "Price"}}</span></td>
              <td><span class=" mx-2">{{lookup this "Description"}}</span></td>
              <td><span class=" mx-2">{{lookup this "Category"}}</span></td>
              <td><span class="mx-2"> {{lookup this "Status"}}</span></td>
              <td><span class="mx-2"> {{lookup this "Stock"}}</span></td>
              <td><span class="mx-2"> {{lookup this "Code"}}</span></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {{/if}}
</div>